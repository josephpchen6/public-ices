<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body>

    <div class="alert alert-primary text-center" role="alert-success" style="display: none;" id="loginBanner"></div>

    <div class="container mt-4">
        <form>
            <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="username" class="form-control" id="loginUsername">
            </div>
            <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="loginPassword">
            </div>
            <button type="submit" class="btn btn-primary mr-4" id="loginButton">Login</button>
            <button type="button" class="btn btn-primary ml-4" data-toggle="modal" data-target="#createAccountModal">Create Account</button>
        </form>
    </div>
    
    <div class="modal fade" id="createAccountModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-content pb-3" role="document">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="form-group text-center h5 pt-3">
                    <label for="username">Username:</label>
                    <input type="text" class="form-control col-10 mx-auto" id="newUsername">
                </div>
                <div class="form-group text-center h5">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control col-10 mx-auto" id="newPassword">
                </div>
                <div class="text-center pt-2">
                    <button type="submit" class="btn btn-primary" id="createAccountButton">Create Account</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function() {
        $('#createAccountButton').click(function(event) {
            event.preventDefault();
            const newUsername = $('#newUsername').val();
            $.ajax({
                url: '/api/create_account',
                method: 'POST',
                data: { username: newUsername, password: $('#newPassword').val()},
                success: function(data) {
                    $("#createAccountModal").modal("hide");
                    loginBanner(newUsername);
                },
                error: function() {
                    alert('Failed to create account (username already exists)');
                }});
            });
        });

        $(document).ready(function() {
        $('#loginButton').click(function(event) {
            event.preventDefault();
            const existingUsername = $('#loginUsername').val();
            $.ajax({
                url: '/api/login',
                method: 'POST',
                data: { username: existingUsername, password: $('#loginPassword').val()},
                success: function(data) {
                    loginBanner(existingUsername);
                },
                error: function() {
                    alert('Invalid username/password');
                }});
            });
        });

        function loginBanner(username) {
            sessionStorage.setItem("username", username);
            $('#loginBanner').fadeIn();
            $('#loginBanner').html("Welcome, " + username + "!");
            setTimeout(function() {
                window.location.replace("/");
            }, 1500);
        }
    </script>
</body>

